{
  "name": "vscode-copilot-api-server",
  "version": "1.0.0",
  "description": "Local API server that exposes GitHub Copilot as OpenAI-compatible endpoint",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "start:prod": "NODE_ENV=production bun run src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "type-check": "tsc --noEmit",
    "test": "bun test",
    "test:unit": "bun test tests/unit/",
    "test:security": "bun run tests/security/run-security-tests.ts",
    "test:integration": "bun run tests/integration/run-integration-tests.ts",
    "test:integration-basic": "bun test tests/integration.test.ts",
    "test:streaming": "bun test tests/streaming-error.test.ts",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "test:verbose": "bun test --verbose",
    "test:client": "bun run examples/test-client.ts",
    "test:streaming-py": "python scripts/tests/test.py",
    "test:performance": "python scripts/performance-test.py",
    "test:all": "bun run test:unit && bun run test:security && bun run test:integration && bun run test:streaming && bun run test:streaming-py && bun run test:performance",
    "test:endpoint": "bun run test-endpoint.ts",
    "test:logging": "bun run scripts/tests/test-logging.ts",
    "test:stop": "python test-stop-param.py",
    "debug": "python debug-test.py",
    "monitor": "python scripts/monitoring-dashboard.py",
    "monitor-perf": "python scripts/monitor-streaming.py",
    "deploy": "chmod +x deploy.sh && ./deploy.sh",
    "auth": "bun run src/index.ts --auth",
    "clear-auth": "bun run src/index.ts --clear-auth"
  },
  "dependencies": {
    "hono": "^4.6.3",
    "zod": "^3.23.8",
    "@hono/zod-validator": "^0.2.2",
    "undici": "^6.19.8"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.6.2"
  },
  "keywords": [
    "github-copilot",
    "openai-api",
    "local-server",
    "vscode"
  ],
  "author": "",
  "license": "MIT"
}
