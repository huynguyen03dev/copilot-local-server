# Production Environment Configuration
# Optimized for performance and minimal logging

# Server Configuration
PORT=8069
HOSTNAME=0.0.0.0
NODE_ENV=production

# Performance Settings (Higher for production)
MAX_STREAMS=200
MAX_BUFFER_SIZE=2097152
REQUEST_TIMEOUT=300000
KEEP_ALIVE_TIMEOUT=65000

# Production Logging Configuration (Optimized)
LOG_LEVEL=info
LOG_COLORS=false
LOG_TIMESTAMPS=true
LOG_CATEGORIES=true
CHUNK_LOG_FREQUENCY=0
ENABLE_PROGRESS_LOGS=true
ENABLE_ENDPOINT_LOGS=false
ENABLE_MODEL_LOGS=true
ENABLE_MEMORY_LOGS=true

# Monitoring (Standard intervals)
METRICS_ENABLED=true
PERFORMANCE_METRICS=true
MEMORY_CHECK_INTERVAL=30000

# Security Settings (Strict for production)
ENABLE_CORS=true
ALLOWED_ORIGINS=*
ENABLE_RATE_LIMIT=true
MAX_REQUESTS_PER_MINUTE=100

# Performance Optimization (Enabled for production)
ENABLE_GC=true
MEMORY_THRESHOLD_MB=1000
ENABLE_COMPRESSION=true
CACHE_HEADERS=true
