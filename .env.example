# Environment Configuration for VS Code Copilot API Server
# Copy this file to .env and customize as needed

# Environment
NODE_ENV=development

# Server Configuration
PORT=8069
HOSTNAME=127.0.0.1
MAX_STREAMS=100
REQUEST_TIMEOUT=300000
KEEP_ALIVE_TIMEOUT=65000

# Streaming Configuration
MAX_BUFFER_SIZE=1048576
CHUNK_TIMEOUT=30000
STREAM_TIMEOUT=300000
BACKPRESSURE_THRESHOLD=524288
RATE_LIMIT_INTERVAL=1000

# Logging Configuration
LOG_LEVEL=info
LOG_COLORS=true
LOG_TIMESTAMPS=false
LOG_CATEGORIES=true
CHUNK_LOG_FREQUENCY=0
ENABLE_PROGRESS_LOGS=true
ENABLE_ENDPOINT_LOGS=true
ENABLE_MODEL_LOGS=true
ENABLE_MEMORY_LOGS=true

# Security Configuration
# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000
CORS_CREDENTIALS=false
CORS_METHODS=GET,POST,OPTIONS
CORS_HEADERS=Content-Type,Authorization,X-Request-ID

# Rate Limiting
ENABLE_RATE_LIMIT=false
MAX_REQUESTS_PER_MINUTE=100

# Encryption (for secure token storage)
# ENCRYPTION_KEY=your-encryption-key-here

# Monitoring Configuration
METRICS_ENABLED=true
PERFORMANCE_METRICS=true
MEMORY_CHECK_INTERVAL=30000
CONNECTION_MONITOR_INTERVAL=60000
MEMORY_THRESHOLD_MB=500
ENABLE_GC=false

# Performance Configuration
ENABLE_COMPRESSION=false
CACHE_HEADERS=false
MAX_MEMORY_MB=1000
GC_THRESHOLD=0.8

# Examples for different environments:
# Development: NODE_ENV=development, LOG_LEVEL=debug, ENABLE_GC=false
# Production: NODE_ENV=production, LOG_LEVEL=info, ENABLE_GC=true, HOSTNAME=0.0.0.0
