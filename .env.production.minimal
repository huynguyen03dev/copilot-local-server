# Minimal Production Environment Configuration
# Optimized for critical production with minimal logging

# Server Configuration
PORT=8069
HOSTNAME=0.0.0.0
NODE_ENV=production

# Performance Settings (Maximum for critical production)
MAX_STREAMS=500
MAX_BUFFER_SIZE=4194304
REQUEST_TIMEOUT=300000
KEEP_ALIVE_TIMEOUT=65000

# Minimal Logging Configuration
LOG_LEVEL=warn
LOG_COLORS=false
LOG_TIMESTAMPS=true
LOG_CATEGORIES=false
CHUNK_LOG_FREQUENCY=0
ENABLE_PROGRESS_LOGS=false
ENABLE_ENDPOINT_LOGS=false
ENABLE_MODEL_LOGS=false
ENABLE_MEMORY_LOGS=true

# Monitoring (Reduced frequency)
METRICS_ENABLED=true
PERFORMANCE_METRICS=false
MEMORY_CHECK_INTERVAL=60000

# Security Settings (Maximum security)
ENABLE_CORS=true
ALLOWED_ORIGINS=https://your-domain.com
ENABLE_RATE_LIMIT=true
MAX_REQUESTS_PER_MINUTE=50

# Performance Optimization (Maximum optimization)
ENABLE_GC=true
MEMORY_THRESHOLD_MB=2000
ENABLE_COMPRESSION=true
CACHE_HEADERS=true
